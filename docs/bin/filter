/ *\\zfb_read\>/ { 
    if ($NF == "*/")
        closecomment = 1
    else
        closecomment = 0

    file = "docs/src/"

    if ($1 == "/**" || $1 == "/*!") {
        file = file $3
        $0 = $1 " "
    }
    else {
        file = file $2
        $0 = ""
    }

    while (getline input <file > 0 )
        $0 = $0 "\n" input

    if (closecomment) $0 = $0 " */"
}

{ print }
